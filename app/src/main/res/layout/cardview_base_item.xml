<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#888787">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"></ImageView>

        <com.example.graduatetravell.Mine.CircleImageView
            android:id="@+id/card_head_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/card_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"></com.example.graduatetravell.Mine.CircleImageView>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="178dp"
            android:layout_height="40dp"
            android:layout_below="@+id/card_image"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/card_name"
            android:layout_width="121dp"
            android:layout_height="20dp"
            android:layout_below="@+id/card_title"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/card_head_image"
            android:layout_toRightOf="@+id/card_head_image"
            android:textColor="@color/white"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

