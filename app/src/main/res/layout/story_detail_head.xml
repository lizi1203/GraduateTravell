<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/story_detail_back_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.graduatetravell.Mine.CircleImageView
            android:id="@+id/story_detail_head_ImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/relax_detail_back_imageView"
            app:layout_constraintTop_toTopOf="@+id/relax_detail_back_imageView" />

        <TextView
            android:id="@+id/story_detail_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="235dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/story_detail_breif_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18dp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/relax_detail_comment_head_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#424141"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>